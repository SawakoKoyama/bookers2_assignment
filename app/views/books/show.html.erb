<html>
  <head></head>
  <body>
    <header></header>
    <main>
      <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
      <div class="container">
        <div class="row">
          <div class="col-md-3">
             <%= render 'books/books', book: @book, user: @user %>
          </div>
          <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
              <table class="table">
                <tbody>
                  <tr>
                    <td>
                      <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no-image.jpg"%>
                      <div><%= link_to "#{@user.name}", user_path(@user) %></div>
                    </td>
                    <td><%= link_to "#{@book.title}", book_path(@book) %></td>
                    <td><%= @book.body %></td>
                    <% if @user.id == current_user.id %>
                    <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success edit_book_14995"%></td>
                    <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除しますか?"}, class: "btn btn-sm btn-danger destroy_book_14995"%></td>
                    <% end %>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
    </main>
  </body>
</html>
